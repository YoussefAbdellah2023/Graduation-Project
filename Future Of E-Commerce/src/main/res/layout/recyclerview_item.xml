<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp">
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt1_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textStyle="italic"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/image_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_below="@id/txt1_recycler_view"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/_2sdp"
         />



        <TextView
            android:id="@+id/txt2_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_recycler_view"
            android:text="Product Description"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="@dimen/_10sdp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/txt3_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2_recycler_view"
            android:text="Product Price"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="@dimen/_10sdp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal" />


    </RelativeLayout>

