<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context=".Staff.StaffAddItemActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminAddItemActivity">



        <ImageView
            android:id="@+id/chose_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:cropToPadding="false"
            android:src="@drawable/choose_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <Spinner
            android:id="@+id/spinner_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chose_image"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"

            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <EditText
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_item_category"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:hint="Item Name"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            />


        <EditText
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:hint="short description"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            />
        <EditText
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_description"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:hint="Detail "
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            />


        <EditText
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_detail"
            android:inputType="textMultiLine"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:hint="Price"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            />



        <Button
            android:id="@+id/save_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_price"
            android:text="Save Item"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="17dp"
            android:layout_marginTop="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/signup_btn_background"
            />






















    </RelativeLayout>

</ScrollView>