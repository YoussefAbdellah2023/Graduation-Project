<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Revision.MainActivityEnterYourDataFireBase">

    <EditText
            android:id="@+id/edit_text_savedata1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_20sdp"
            android:hint="Enter Your Name"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp"
            android:inputType="text"/>

        <EditText
        android:id="@+id/edit_text_savedata2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_savedata1"
        android:layout_margin="@dimen/_20sdp"
        android:hint="Enter Your Phone"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_15sdp"
        android:inputType="phone"/>


        <Button
            android:id="@+id/btn_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_savedata2"
            android:layout_margin="@dimen/_25sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Save Your Data"
            android:textColor="@color/black"
            android:background="@drawable/signup_btn_background"
            android:textSize="@dimen/_20sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>