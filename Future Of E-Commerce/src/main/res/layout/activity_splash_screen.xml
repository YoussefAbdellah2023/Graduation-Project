<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/welcomepage">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/G3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img1_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/G3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/imgsplash"
        android:layout_marginTop="@dimen/_30sdp"/>

    <TextView
        android:id="@+id/text_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img1_splash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_30sdp"
        android:hint="   E-Commerce Future"
        android:textColorHint="@color/green"
        android:textSize="@dimen/_25sdp"
        android:fontFamily="sans-serif-black"/>

</androidx.constraintlayout.widget.ConstraintLayout>